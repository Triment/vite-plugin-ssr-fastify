{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "@types/jest"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "#root/*": ["./*"],
      "*": ["./*.d.ts"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
